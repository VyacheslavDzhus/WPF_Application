<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:FinalProject.Themes">

    <Style TargetType="RadioButton">
        <Setter Property="Foreground" Value="#FCF6F5"></Setter>
    </Style>

    <Style TargetType="Grid">
        <Setter Property="Background" Value="#FCF6F5"></Setter>
    </Style>

    <Style TargetType="ScrollBar">
        <Setter Property="Foreground" Value="#89ABE3FF"></Setter>
        <Setter Property="Background" Value="#89ABE3FF"></Setter>
        <Setter Property="BorderBrush" Value="#89ABE3FF"></Setter>
    </Style>

    <Style TargetType="Button">
        <Setter Property="Foreground" Value="#FCF6F5"></Setter>
        <Setter Property="Background" Value="#E69A8DFF"></Setter>
    </Style>

    <Style TargetType="ListBox" >
        <Setter Property="Background" Value="#FCF6F5"></Setter>
        <Setter Property="BorderBrush" Value="#E69A8DFF"></Setter>
    </Style>

    <Style TargetType="Slider">
        <Setter Property="Foreground" Value="#E69A8DFF"></Setter>
    </Style>


    <Style TargetType="Border">
        <Setter Property="BorderThickness" Value="3"></Setter>
        <Setter Property="BorderBrush" Value="#E69A8DFF"></Setter>
    </Style>


    <Style TargetType="GroupBox">

        <Setter Property="BorderBrush" Value="#E69A8DFF"></Setter>
        <Setter Property="Background" Value="#E69A8DFF"></Setter>
        <Setter Property="Foreground" Value="#FCF6F5"></Setter>
    </Style>

    <Style TargetType="Run">
        <Setter Property="Foreground" Value="#FCF6F5"></Setter>
    </Style>

    <Style TargetType="Label">
        <Setter Property="Foreground" Value="#E69A8DFF"></Setter>
    </Style>
    <Style TargetType="TextBox">
        <Setter Property="Foreground" Value="#E69A8DFF"></Setter>
        <Setter Property="Background" Value="#FCF6F5"></Setter>
    </Style>

    <Style TargetType="ComboBox">
        <Setter Property="Foreground" Value="#E69A8DFF"></Setter>
        <Setter Property="Background" Value="#FCF6F5"></Setter>
    </Style>

    <Style TargetType="ComboBoxItem">
        <Setter Property="Foreground" Value="#E69A8DFF"></Setter>
        <Setter Property="Background" Value="#FCF6F5"></Setter>
    </Style>
</ResourceDictionary>